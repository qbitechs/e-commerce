<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <%= render "shared/breadcrumbs", current_page: "Orders", pre: [] %>
  <!-- Status Filters -->
  <div class="flex flex-wrap gap-2 mb-6">
    <button class="px-4 py-2 bg-blue-100 text-blue-800 rounded-full text-sm font-medium">All Orders</button>
    <button class="px-4 py-2 bg-gray-100 text-gray-800 rounded-full text-sm font-medium">Pending</button>
    <button class="px-4 py-2 bg-yellow-100 text-yellow-800 rounded-full text-sm font-medium">Processing</button>
    <button class="px-4 py-2 bg-green-100 text-green-800 rounded-full text-sm font-medium">Shipped</button>
    <button class="px-4 py-2 bg-red-100 text-red-800 rounded-full text-sm font-medium">Cancelled</button>
    <button class="px-4 py-2 bg-purple-100 text-purple-800 rounded-full text-sm font-medium">Completed</button>
  </div>
  <!-- Orders Table -->
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <div class="hidden md:block">
      <table class="min-w-full divide-y divide-gray-200">
        <!-- Table Header -->
        <thead class="bg-gray-100">
          <tr class="text-xs font-medium text-gray-500 uppercase tracking-wider">
            <th class="px-6 py-3 text-left">Order ID</th>
            <th class="px-6 py-3 text-left">Customer</th>
            <th class="px-6 py-3 text-left">Shipping</th>
            <th class="px-6 py-3 text-left">Status</th>
            <th class="px-6 py-3 text-left">Date</th>
            <th class="px-6 py-3 text-right">Total</th>
          </tr>
        </thead>
        <!-- Table Body -->
        <tbody class="divide-y divide-gray-200" data-controller="order-row">
          <% @orders.each do |order| %>
            <%= render "table", order: order %>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="block md:hidden">
      <%= render "mobile_layout", orders: @orders %>
    </div>
  </div>
</div>
<div class="mt-6">
  <!-- Pagination -->
  <%= render "shared/pagination", pagy: @pagy %>
</div>
