<%= form_with url: cart_checkout_path, method: :post, local: true do %>
  <div class="space-y-4">
    <h3 class="text-lg font-medium text-gray-900">Shipping Information</h3>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">First Name</label>
        <%= text_field_tag "order[recipient_first_name]", nil,
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent",
              required: true %>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Last Name</label>
        <%= text_field_tag "order[recipient_last_name]", nil,
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent",
              required: true %>
      </div>
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Phone</label>
      <%= telephone_field_tag "order[recipient_phone]", nil,
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent",
            required: true %>
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Address</label>
      <%= text_field_tag "order[shipping_address]", nil,
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent",
            required: true %>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">City</label>
        <%= text_field_tag "order[shipping_city]", nil,
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent",
              required: true %>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Country</label>
        <%= text_field_tag "order[shipping_country]", nil,
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent",
              required: true %>
      </div>
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Zip Code</label>
      <%= text_field_tag "order[shipping_zip_code]", nil,
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent",
            required: true %>
    </div>
  </div>

  <div class="mt-6">
    <button type="submit"
            class="px-6 py-3 bg-primary text-white rounded-lg hover:bg-primary-dark">
      Place Order
    </button>
  </div>
<% end %>
