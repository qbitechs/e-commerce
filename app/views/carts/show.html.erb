    
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Your Shopping Cart</h1>
    <div>
      <span id="item-count" class="text-gray-600 mr-2"><%= @cart_items.count %> Items</span>
      <a href="#" class="text-primary font-medium hover:text-indigo-800">Continue Shopping</a>
    </div>
  </div>
  <div class="flex flex-col lg:flex-row gap-8">
    <!-- Cart Items List -->
    <div class="lg:w-2/3">
      <% @cart_items.each do |item| %>
        <%= render "carts/cart_item", item: item, product: item.product %>
      <% end %>
    </div>
    <!-- Checkout -->
    <div class="lg:w-1/3">
      <%= render "carts/checkout_cart", total_amount: @total_price %>
    </div>
  </div>
</div>
