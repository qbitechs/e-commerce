<%= form_with model: item, url: cart_item_path(item), method: :patch, local: true do |f| %>
  <div class="cart-item bg-white rounded-xl shadow-md p-6 mb-6" data-price="149.99">
    <div class="flex flex-col md:flex-row">
      <div class="md:w-1/4 flex justify-center mb-4 md:mb-0">
        <% if product.image.attached? %>
          <div class="bg-gradient-to-br from-blue-100 to-blue-200 rounded-xl w-full overflow-hidden">
            <%= image_tag product.image, class: "w-full h-full object-cover", alt: product.name %>
          </div>
        <% else %>
          <div class="bg-gradient-to-br from-blue-100 to-blue-200 rounded-xl w-full h-40 md:h-32 flex items-center justify-center">
            <div class="bg-white p-4 rounded-full shadow-lg">
              <svg class="w-12 h-12 text-blue-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 18.75a6 6 0 006-6v-1.5m-6 7.5a6 6 0 01-6-6v-1.5m6 7.5v3.75m-3.75 0h7.5M12 15.75a3 3 0 01-3-3V4.5a3 3 0 116 0v8.25a3 3 0 01-3 3z" />
              </svg>
            </div>
          </div>
        <% end %>
      </div>
      <div class="md:w-3/4 md:pl-6">
        <div class="flex justify-between">
          <div>
            <h3 class="text-xl font-semibold text-gray-900"><%= product.name %></h3>
            <p class="text-gray-500 mt-1">SKU: <%= product.sku %></p>
            <div class="flex items-center mt-2">
              <div class="flex">
                <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
                <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
                <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
                <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
                <svg class="w-4 h-4 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              </div>
              <span class="ml-2 text-sm text-gray-500">(128 reviews)</span>
            </div>
          </div>
          <div class="text-right">
            <p class="text-xl font-bold text-primary item-price"><%= number_to_currency(item.total_price) %></p>
            <p class="text-sm text-gray-500 mt-1 line-through"><%= number_to_currency(item.total_price + 20) %></p>
          </div>
        </div>
        <div class="flex flex-col sm:flex-row sm:items-center justify-between mt-6">
          <div class="flex items-center mb-4 sm:mb-0">
            <p class="text-sm font-medium text-gray-900 mr-4">Quantity</p>
            <div class="flex">
              <button class="bg-gray-100 text-gray-600 hover:bg-gray-200 h-9 w-9 rounded-l-lg flex items-center justify-center">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"></path>
                </svg>
              </button>
              <%= f.number_field :quantity, min: 1, class: "bg-gray-50 border-y border-gray-300 h-9 w-12 text-center text-base font-medium" %>
              <button class="bg-gray-100 text-gray-600 hover:bg-gray-200 h-9 w-9 rounded-r-lg flex items-center justify-center">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
              </button>
            </div>
          </div>
          <div class="flex space-x-3">
            <%= f.submit "Update", class: "px-4 py-2 border border-blue-300 rounded-lg text-blue-600 hover:bg-blue-100 flex items-center transition-colors" %>
            <%= link_to cart_item_path(item), data: { turbo_method: :delete, turbo_confirm: "Are you sure!" }, class: "remove-btn px-4 py-2 border border-red-500 rounded-lg text-red-500 hover:bg-red-500 hover:text-white flex items-center transition-colors" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
              </svg>
              Remove
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
