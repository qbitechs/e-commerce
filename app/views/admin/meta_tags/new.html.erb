<div class="max-w-4xl mx-auto px-4 sm:px-6 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-2xl font-bold text-gray-800">Create New Meta Tag</h1>
    <%= link_to admin_meta_tags_path, class: 'text-indigo-600 hover:text-indigo-800 flex items-center gap-1 text-sm' do %>
      <i class="bi bi-arrow-left"></i> Back to Meta Tags
    <% end %>
  </div>

  <div class="bg-white rounded-xl shadow-md p-6 border border-gray-200">
    <%= render 'form', meta_tag: @meta_tag %>
  </div>
</div>
