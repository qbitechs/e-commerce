<div class="w-full px-4 py-6">
  <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-6">
    <h1 class="text-2xl font-bold text-gray-800">Meta Tags Management</h1>
    <%= link_to new_admin_meta_tag_path, class: 'flex items-center gap-1 px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium rounded-md shadow-sm transition-colors duration-200' do %>
      <i class="bi bi-plus-circle"></i> New Meta Tag
    <% end %>
  </div>
  <div class="bg-white rounded-xl shadow border border-gray-200 overflow-hidden">
    <div class="overflow-x-auto">
      <table class="w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/4">Page</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/4">Title</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-2/5">Description</th>
            <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider w-[15%]">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% if @tags.empty? %>
            <tr>
              <td colspan="4" class="text-center py-12 bg-gray-50">
                <div class="flex flex-col items-center justify-center max-w-md mx-auto text-gray-500">
                  <i class="bi bi-tags text-4xl text-gray-400 mb-3"></i>
                  <p class="mb-2">No meta tags found</p>
                  <%= link_to 'Create your first meta tag', new_admin_meta_tag_path, class: 'text-indigo-600 hover:text-indigo-800 font-medium transition-colors duration-200' %>
                </div>
              </td>
            </tr>
          <% else %>
            <% @tags.each do |meta_tag| %>
              <tr class="hover:bg-gray-50 transition-colors duration-150">
                <td class="px-4 py-3 text-sm text-gray-800 align-middle">
                  <div class="truncate max-w-[16rem]"><%= meta_tag.page %></div>
                </td>
                <td class="px-4 py-3 text-sm text-gray-800 align-middle">
                  <div class="truncate max-w-[16rem]" title="<%= meta_tag.title %>">
                    <%= meta_tag.title %>
                  </div>
                </td>
                <td class="px-4 py-3 text-sm text-gray-600 align-middle">
                  <div class="truncate max-w-[24rem]" title="<%= meta_tag.description %>">
                    <%= meta_tag.description %>
                  </div>
                </td>
                <td class="px-4 py-3 text-right align-middle">
                  <div class="flex justify-end space-x-2">
                    <%= link_to edit_admin_meta_tag_path(meta_tag), class: 'p-2 text-gray-500 hover:text-indigo-600 hover:bg-indigo-50 rounded-full transition-colors duration-200' do %>
                      <i class="fas fa-pencil-alt text-sm"></i>
                    <% end %>
                    <%= link_to admin_meta_tag_path(meta_tag), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this meta tag?' },class: 'p-2 text-gray-500 hover:text-red-600 hover:bg-red-50 rounded-full transition-colors duration-200' do %>
                      <i class="fas fa-trash text-sm"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
