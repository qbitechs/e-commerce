<%= form_with(model: [:admin, meta_tag], local: true, class: 'space-y-6') do |form| %>
  <% if meta_tag.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-700 p-4 rounded-lg border border-red-200">
      <h2 class="font-bold text-lg mb-2"><%= pluralize(meta_tag.errors.count, "error") %> prohibited this meta tag from being saved:</h2>
      <ul class="list-disc pl-5 space-y-1">
        <% meta_tag.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-2">
    <%= form.label :page, "Page Url", class: 'block text-sm font-medium text-gray-700' %>
    <%= form.text_field :page, class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500' %>
  </div>

  <div class="space-y-2">
    <%= form.label :title, class: 'block text-sm font-medium text-gray-700' %>
    <%= form.text_field :title, class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500' %>
  </div>

  <div class="space-y-2">
    <%= form.label :keywords, class: 'block text-sm font-medium text-gray-700' %>
    <%= form.text_field :keywords, class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500' %>
  </div>

  <div class="space-y-2">
    <%= form.label :description, class: 'block text-sm font-medium text-gray-700' %>
    <%= form.text_area :description, rows: 4, class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500' %>
  </div>

  <div class="flex items-center justify-end space-x-3 pt-4">
    <%= link_to 'Cancel', admin_meta_tags_path, class: 'px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
    <%= form.submit class: 'px-4 py-2 bg-indigo-600 border border-transparent rounded-md shadow-sm text-sm font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer' %>
  </div>
<% end %>
