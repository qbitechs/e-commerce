<%= search_form_for @q, url: admin_orders_path, method: :get, html: { class: "bg-white rounded-xl shadow-sm border border-gray-100 p-5 mb-6 space-y-4" } do |f| %>
  <div class="grid grid-cols-1 md:grid-cols-6 gap-4">
    <!-- Order Number -->
    <div class="md:col-span-1">
      <%= f.label :id_eq, "Order #", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :id_eq, placeholder: "Search by number", class: "w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>
    <!-- Status dropdown -->
    <div class="md:col-span-1">
      <%= f.label :status_eq, "Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select( :status_eq, Order::STATUSES, { include_blank: "All Statuses", selected: params.dig(:q, :status_eq) }, { class: "w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" }) %>    
    </div>
    <!-- Recipient name -->
    <div class="md:col-span-1">
      <%= f.label :recipient_first_name_or_recipient_last_name_cont, "Recipient", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :recipient_first_name_or_recipient_last_name_cont, placeholder: "First or Last name", class: "w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>
    <!-- Date Range -->
    <div class="md:col-span-2">
      <div class="grid grid-cols-2 gap-3">
        <div>
          <%= f.label :created_at_gteq, "From Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.date_field :created_at_gteq, class: "w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
        </div>
        <div>
          <%= f.label :created_at_lteq, "To Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.date_field :created_at_lteq, class: "w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
        </div>
      </div>
    </div>
    <!-- Actions -->
    <div class="md:col-span-1 flex items-end">
      <div class="flex gap-2 w-full">
        <%= f.submit "Search", class: "flex-1 inline-flex items-center justify-center px-3 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 text-sm" %>
        <%= link_to "Reset", admin_orders_path, class: "flex-1 inline-flex items-center justify-center px-3 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 text-sm" %>
      </div>
    </div>
  </div>
<% end %>
