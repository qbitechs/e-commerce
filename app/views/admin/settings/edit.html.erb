<!-- app/views/admin/settings/edit.html.erb -->
<h1>Store Settings</h1>

<%= form_with(model: @store, url: admin_settings_path, method: :patch, local: true, multipart: true) do |f| %>
  <% if @store.errors.any? %>
    <div class="errors">
      <h2><%= pluralize(@store.errors.count, "error") %> prevented this from saving:</h2>
      <ul>
        <% @store.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :logo, "Logo (max 5MB)" %><br>
    <% if @store.logo.attached? %>
      <div>
        <%= image_tag @store.logo.variant(resize_to_limit: [150, 150]) %>
      </div>
    <% end %>
    <%= f.file_field :logo, accept: "image/*" %>
  </div>

  <div class="field">
    <%= f.label :hero_image, "Hero Image (max 5MB)" %><br>
    <% if @store.hero_image.attached? %>
      <div>
        <%= image_tag @store.hero_image.variant(resize_to_limit: [300, 100]) %>
      </div>
    <% end %>
    <%= f.file_field :hero_image, accept: "image/*" %>
  </div>

  <div class="actions">
    <%= f.submit "Save Settings" %>
  </div>
<% end %>

