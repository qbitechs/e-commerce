<div class="max-w-4xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-8 border-b pb-4">Store Settings</h1>
  <%= form_with(model: @store, url: admin_settings_path, method: :patch, local: true, multipart: true, class: "bg-white shadow rounded-lg p-6") do |f| %>
    <% if @store.errors.any? %>
      <div class="bg-red-50 text-red-800 p-4 rounded-lg mb-6">
        <h2 class="font-bold text-lg mb-2"><%= pluralize(@store.errors.count, "error") %> prevented this from saving:</h2>
        <ul class="list-disc pl-5 space-y-1">
          <% @store.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="mb-6">
      <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>
    <div class="mb-6">
      <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.rich_text_area :description, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>
    <div class="mb-6">
      <div class="flex items-center justify-between mb-2">
        <%= f.label :logo, "Logo (max 5MB)", class: "block text-sm font-medium text-gray-700" %>
        <% if @store.logo.attached? %>
          <div class="flex items-center">
            <span class="text-xs text-gray-500 mr-2">Current:</span>
            <%= image_tag @store.logo.variant(resize_to_limit: [150, 150]), class: "rounded-md border" %>
          </div>
        <% end %>
      </div>
      <%= f.file_field :logo, accept: "image/*", class: "w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" %>
    </div>
    <div class="mb-8">
      <div class="flex items-center justify-between mb-2">
        <%= f.label :hero_image, "Hero Image (max 5MB)", class: "block text-sm font-medium text-gray-700" %>
        <% if @store.hero_image.attached? %>
          <div class="flex items-center">
            <span class="text-xs text-gray-500 mr-2">Current:</span>
            <%= image_tag @store.hero_image.variant(resize_to_limit: [300, 100]), class: "rounded-md border" %>
          </div>
        <% end %>
      </div>
      <%= f.file_field :hero_image, accept: "image/*", class: "w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" %>
    </div>
    <div class="flex justify-end pt-4 border-t">
      <%= f.submit "Save Settings", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  <% end %>
</div>
