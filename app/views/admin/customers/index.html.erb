<div class="p-6">
  <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Manage Customers</h1>
      <p class="mt-1 text-gray-600">View, edit, and manage your customer accounts and their orders</p>
    </div>
  </div>
  
  <!-- Filter and Search Bar -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-5 mb-6">
    <%= form_with url: "#", method: :get, local: true, class: "flex flex-col md:flex-row md:items-center md:justify-between" do |form| %>
      <div class="flex items-center mb-4 md:mb-0">
        <div class="relative mr-4">
          <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
          <%= form.text_field :search, placeholder: "Search customers...", value: params[:search], class: "pl-10 pr-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent w-64" %>
        </div>
        <%= form.submit "Search", class: "bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium py-2 px-4 rounded-lg inline-flex items-center cursor-pointer" %>
      </div>
      <div class="text-sm text-gray-600">
        Showing <%= @customers.count %> customers
      </div>
    <% end %>
  </div>
  
  <!-- Customers Table -->
  <%= render "table", customers: @customers %>

  <!-- Pagination -->
  <%= render "shared/pagination", pagy: @pagy %>
</div>
