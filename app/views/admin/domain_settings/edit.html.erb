<div class="flex flex-col lg:flex-row gap-8">
  <!-- Form Section -->
  <div class="lg:w-1/2 bg-white rounded-2xl shadow-lg p-6 lg:p-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Edit Domain Settings</h1>
    <p class="text-gray-600 mb-8">Configure your store's domain preferences</p>
    <form>
      <!-- Domain Type Selection -->
      <div class="mb-8">
        <label class="block text-lg font-medium text-gray-900 mb-4">Choose Domain Type</label>
        <div class="flex flex-col sm:flex-row gap-4">
          <label class="flex-1">
            <input type="radio" name="domain_type" value="subdomain" class="hidden peer" checked>
            <div class="p-4 border-2 border-gray-200 rounded-xl cursor-pointer transition-all peer-checked:border-primary peer-checked:ring-2 peer-checked:ring-primary/30 hover:border-gray-300">
              <div class="flex items-center">
                <div class="w-6 h-6 rounded-full border-2 border-gray-300 mr-3 flex items-center justify-center peer-checked:border-primary">
                  <div class="w-3 h-3 rounded-full bg-primary hidden peer-checked:block"></div>
                </div>
                <span class="font-medium text-gray-900">Subdomain</span>
              </div>
              <p class="text-gray-600 mt-2 text-sm">Use a subdomain of our platform</p>
            </div>
          </label>
          <label class="flex-1">
            <input type="radio" name="domain_type" value="custom" class="hidden peer">
            <div class="p-4 border-2 border-gray-200 rounded-xl cursor-pointer transition-all peer-checked:border-primary peer-checked:ring-2 peer-checked:ring-primary/30 hover:border-gray-300">
              <div class="flex items-center">
                <div class="w-6 h-6 rounded-full border-2 border-gray-300 mr-3 flex items-center justify-center peer-checked:border-primary">
                  <div class="w-3 h-3 rounded-full bg-primary hidden peer-checked:block"></div>
                </div>
                <span class="font-medium text-gray-900">Custom Domain</span>
              </div>
              <p class="text-gray-600 mt-2 text-sm">Use your own custom domain</p>
            </div>
          </label>
        </div>
      </div>
      <!-- Subdomain Fields -->
      <div id="subdomain-fields" class="mb-8">
        <div class="mb-6">
          <label class="block text-sm font-medium text-gray-900 mb-2">Subdomain</label>
          <div class="relative flex">
            <input type="text" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary" placeholder="yourstore">
            <span class="absolute right-4 top-1/2 transform -translate-y-1/2 text-gray-500">.yourapp.com</span>
          </div>
          <p class="mt-2 text-sm text-gray-500">Letters, numbers and hyphens only. Minimum 4 characters.</p>
        </div>
      </div>
      <!-- Custom Domain Fields -->
      <div id="custom-domain-fields" class="mb-8 hidden">
        <div class="mb-6">
          <label class="block text-sm font-medium text-gray-900 mb-2">Custom Domain</label>
          <input type="text" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary" placeholder="yourdomain.com">
          <p class="mt-2 text-sm text-gray-500">Enter your domain without http:// or https://</p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-medium text-gray-900 mb-2">Status</label>
            <select class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary">
              <option>Pending</option>
              <option selected>Verified</option>
              <option>Failed</option>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-900 mb-2">Verified At</label>
            <input type="datetime-local" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary" value="2025-06-28T14:30">
          </div>
        </div>
        <div class="mt-6 p-4 bg-blue-50 rounded-lg border border-blue-200">
          <div class="flex">
            <div class="flex-shrink-0 mt-0.5">
              <i class="fas fa-info-circle text-blue-500"></i>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-blue-800">DNS Configuration Required</h3>
              <div class="mt-2 text-sm text-blue-700">
                <p>After saving, you'll need to update your DNS settings to point to:</p>
                <p class="mt-1 font-mono text-sm">123.45.67.89 or store.yourplatform.com</p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Action Buttons -->
      <div class="flex flex-wrap gap-3">
        <button type="submit" class="px-6 py-3 bg-primary hover:bg-primary/90 text-white font-medium rounded-lg transition-all focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary/50 shadow-sm">
          Save Settings
        </button>
        <button type="button" class="px-6 py-3 bg-white border border-gray-300 hover:bg-gray-50 text-gray-700 font-medium rounded-lg transition-all focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-300 shadow-sm">
          Cancel
        </button>
      </div>
    </form>
  </div>
  <!-- Instructions Section -->
  <div class="lg:w-1/2">
    <!-- Subdomain Instructions -->
    <div id="subdomain-instructions" class="bg-white rounded-2xl shadow-lg p-6 lg:p-8">
      <div class="flex items-center mb-6">
        <div class="p-3 rounded-lg bg-indigo-100 text-indigo-600 mr-4">
          <i class="fas fa-globe text-xl"></i>
        </div>
        <h2 class="text-2xl font-bold text-gray-900">Subdomain Setup</h2>
      </div>
      <div class="space-y-6">
        <div class="flex">
          <div class="flex-shrink-0 mt-1">
            <div class="w-8 h-8 rounded-full bg-green-100 flex items-center justify-center">
              <span class="text-green-600 font-bold">1</span>
            </div>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-medium text-gray-900">Choose Your Subdomain</h3>
            <p class="mt-1 text-gray-600">Select a unique subdomain that represents your brand. This will be part of your store's URL.</p>
          </div>
        </div>
        <div class="flex">
          <div class="flex-shrink-0 mt-1">
            <div class="w-8 h-8 rounded-full bg-green-100 flex items-center justify-center">
              <span class="text-green-600 font-bold">2</span>
            </div>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-medium text-gray-900">Instant Activation</h3>
            <p class="mt-1 text-gray-600">Your subdomain will be active immediately after saving. No DNS configuration required.</p>
          </div>
        </div>
        <div class="flex">
          <div class="flex-shrink-0 mt-1">
            <div class="w-8 h-8 rounded-full bg-green-100 flex items-center justify-center">
              <span class="text-green-600 font-bold">3</span>
            </div>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-medium text-gray-900">SSL Certificate</h3>
            <p class="mt-1 text-gray-600">We automatically provision a free SSL certificate for your subdomain to ensure secure connections.</p>
          </div>
        </div>
      </div>
      <div class="mt-8 p-4 bg-gray-50 rounded-lg border border-gray-200">
        <h3 class="font-medium text-gray-900 mb-2">Example URLs</h3>
        <ul class="text-gray-600 space-y-1">
          <li class="flex items-start">
            <i class="fas fa-check-circle text-green-500 mt-1 mr-2"></i>
            <span>https://<span class="font-semibold">yourstore</span>.yourapp.com</span>
          </li>
          <li class="flex items-start">
            <i class="fas fa-check-circle text-green-500 mt-1 mr-2"></i>
            <span>https://<span class="font-semibold">brand</span>.yourapp.com</span>
          </li>
          <li class="flex items-start">
            <i class="fas fa-check-circle text-green-500 mt-1 mr-2"></i>
            <span>https://<span class="font-semibold">company-name</span>.yourapp.com</span>
          </li>
        </ul>
      </div>
    </div>
    <!-- Custom Domain Instructions -->
    <div id="custom-domain-instructions" class="bg-white rounded-2xl shadow-lg p-6 lg:p-8 mt-8 hidden">
      <div class="flex items-center mb-6">
        <div class="p-3 rounded-lg bg-purple-100 text-purple-600 mr-4">
          <i class="fas fa-cog text-xl"></i>
        </div>
        <h2 class="text-2xl font-bold text-gray-900">Custom Domain Setup</h2>
      </div>
      <div class="space-y-6">
        <div class="flex">
          <div class="flex-shrink-0 mt-1">
            <div class="w-8 h-8 rounded-full bg-purple-100 flex items-center justify-center">
              <span class="text-purple-600 font-bold">1</span>
            </div>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-medium text-gray-900">Enter Your Domain</h3>
            <p class="mt-1 text-gray-600">Provide your registered domain name. Make sure you own this domain.</p>
          </div>
        </div>
        <div class="flex">
          <div class="flex-shrink-0 mt-1">
            <div class="w-8 h-8 rounded-full bg-purple-100 flex items-center justify-center">
              <span class="text-purple-600 font-bold">2</span>
            </div>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-medium text-gray-900">Configure DNS</h3>
            <p class="mt-1 text-gray-600">Update your DNS settings to point to our platform. We'll provide the required records.</p>
          </div>
        </div>
        <div class="flex">
          <div class="flex-shrink-0 mt-1">
            <div class="w-8 h-8 rounded-full bg-purple-100 flex items-center justify-center">
              <span class="text-purple-600 font-bold">3</span>
            </div>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-medium text-gray-900">Verification</h3>
            <p class="mt-1 text-gray-600">We'll automatically verify your DNS configuration and issue an SSL certificate (takes 1-24 hours).</p>
          </div>
        </div>
      </div>
      <div class="mt-8">
        <h3 class="font-medium text-gray-900 mb-3">DNS Configuration Example</h3>
        <div class="bg-gray-800 rounded-lg p-4 text-sm font-mono text-gray-100 overflow-x-auto">
          <div class="mb-2">
            <span class="text-green-400"># Record Type</span> <span class="text-blue-400">Name</span> <span class="text-yellow-400">Value</span> <span class="text-purple-400">TTL</span>
          </div>
          <div>
            <span class="text-gray-400">CNAME</span> <span class="text-white">www</span> <span class="text-amber-300">yourstore.yourapp.com</span> <span class="text-cyan-300">3600</span>
          </div>
          <div>
            <span class="text-gray-400">A</span> <span class="text-white">@</span> <span class="text-amber-300">192.0.2.1</span> <span class="text-cyan-300">3600</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  document.addEventListener('DOMContentLoaded', function() {
      const domainTypeRadios = document.querySelectorAll('input[name="domain_type"]');
      const subdomainFields = document.getElementById('subdomain-fields');
      const customDomainFields = document.getElementById('custom-domain-fields');
      const subdomainInstructions = document.getElementById('subdomain-instructions');
      const customDomainInstructions = document.getElementById('custom-domain-instructions');

      // Set initial state
      updateFormDisplay();

      // Add event listeners
      domainTypeRadios.forEach(radio => {
          radio.addEventListener('change', updateFormDisplay);
      });

      function updateFormDisplay() {
          const isSubdomainSelected = document.querySelector('input[name="domain_type"]:checked').value === 'subdomain';

          // Toggle form fields
          if (isSubdomainSelected) {
              subdomainFields.classList.remove('hidden');
              customDomainFields.classList.add('hidden');
          } else {
              subdomainFields.classList.add('hidden');
              customDomainFields.classList.remove('hidden');
          }

          // Toggle instructions
          if (isSubdomainSelected) {
              subdomainInstructions.classList.remove('hidden');
              customDomainInstructions.classList.add('hidden');
          } else {
              subdomainInstructions.classList.add('hidden');
              customDomainInstructions.classList.remove('hidden');
          }
      }
  });
</script>
