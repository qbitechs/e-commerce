<div class="max-w-md mx-auto py-12 px-4 sm:px-6">
  <div class="bg-white p-8 rounded-xl shadow-lg border border-gray-100">
    <div class="text-center mb-8">
      <svg class="mx-auto h-16 w-16 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
      </svg>
      <h2 class="text-3xl font-bold text-gray-900 mt-4 mb-2">Reset Your Password</h2>
      <p class="text-gray-600 max-w-md mx-auto">Enter your email address and we'll send you instructions to reset your password</p>
    </div>
    
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      
      <div class="space-y-2">
        <div class="flex items-center">
          <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
          <span class="ml-1 text-red-600">*</span>
        </div>
        <div class="relative">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent", placeholder: "you@example.com", required: true %>
          <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
            <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
        </div>
      </div>
      
      <div class="pt-4">
        <%= f.submit "Send Reset Instructions", class: "w-full bg-indigo-600 text-white py-3.5 px-4 rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 font-medium transition-colors shadow-md transform hover:-translate-y-0.5 duration-200 cursor-pointer" %>
      </div>
    <% end %>
    
    <div class="mt-8 pt-6 border-t border-gray-200 text-center">
      <p class="text-sm text-gray-600">
        <%= link_to "← Back to Sign in", new_session_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500 inline-flex items-center" %>
      </p>
    </div>
  </div>
</div>
