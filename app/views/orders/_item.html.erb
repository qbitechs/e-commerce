      
<div class="grid grid-cols-12 gap-4 mb-2 px-3 py-2 bg-white rounded-lg">
  <div class="col-span-1">
    <div class="bg-gray-200 border-2 border-dashed rounded-xl w-16 h-16"></div>
  </div>
  <div class="col-span-4">
    <div class="font-medium"><%= item.product.name %></div>
    <div class="text-sm text-gray-500">SKU: <%= item.product.sku %></div>
  </div>
  <div class="col-span-2">
    <div class="text-gray-600"><%= number_to_currency(item.unit_price) %></div>
  </div>
  <div class="col-span-1 text-center">
    <span class="bg-gray-100 px-2 py-1 rounded"><%= item.quantity %></span>
  </div>
  <div class="col-span-2">
    <div class="font-medium"><%= number_to_currency(item.total) %></div>
  </div>
  <div class="col-span-2 text-right">
    <span class="bg-green-100 text-green-800 px-2 py-1 rounded text-xs">
      <%= item.order.status %>
    </span>
  </div>
</div>
