<% flash.each do |type, message| %>
  <%# Map flash types to appropriate color schemes %>
  <% alert_class = case type.to_sym
    when :success then "bg-green-50 border-green-400 text-green-700"
    when :notice then "bg-blue-50 border-blue-400 text-blue-700"
    when :alert  then "bg-yellow-50 border-yellow-400 text-yellow-700"
    when :error  then "bg-red-50 border-red-400 text-red-700"
    else "bg-gray-50 border-gray-400 text-gray-700"
  end %>

  <% icon_path = case type.to_sym
    when :success then "M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
    when :notice then "M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
    when :alert  then "M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z"
    when :error  then "M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
    else "M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z"
  end %>

  <div class="<%= alert_class %> border-l-4 p-4 mb-4 rounded-md shadow-sm" role="alert">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="<%= icon_path %>" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3">
        <% if message.is_a?(Array) %>
          <h3 class="text-sm font-medium mb-2">
            <%= pluralize(message.count, "error") %> occurred:
          </h3>
          <ul class="list-disc pl-5 space-y-1 text-sm">
            <% message.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-sm"><%= message %></p>
        <% end %>
      </div>
      <div class="ml-auto pl-3">
        <button type="button" class="flash-close-button" data-dismiss-target="closest div" aria-label="Close">
          <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </button>
      </div>
    </div>
  </div>
<% end %>
