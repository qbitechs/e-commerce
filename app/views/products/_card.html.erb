<div class="bg-white rounded-xl shadow-sm overflow-hidden border border-gray-100 transition-all duration-300 hover:shadow-lg flex flex-col h-full">
  <% if current_admin %>
    <%= link_to edit_admin_product_path(product), class: "relative group" do %>
      <%= render partial: "products/card_image", locals: { product: product, admin: true } %>
    <% end %>
  <% elsif current_customer %>
    <%= link_to product_path(product) do %>
      <%= render partial: "products/card_image", locals: { product: product, admin: false } %>
    <% end %>
  <% else %>
    <%= render partial: "products/card_image", locals: { product: product, admin: false } %>
  <% end %>
  <!-- Product Info -->
  <div class="p-5 flex flex-col flex-grow">
    <div class="mb-1">
      <h3 class="text-lg font-semibold text-gray-900 mt-1"><%= product.name %></h3>
    </div>
    <!-- Rating -->
    <div class="flex items-center mb-2">
      <div class="flex text-yellow-400">
        <% rand(3..5).times do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
        <% end %>
        <% (5 - rand(3..5)).times do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-300" viewBox="0 0 20 20" fill="currentColor">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
        <% end %>
      </div>
      <span class="text-xs text-gray-500 ml-1">(<%= "%.1f" % (rand(3.0..5.0)) %>)</span>
    </div>
    <!-- Description with limited height -->
    <div class="mb-4 flex-grow">
      <p class="text-gray-600 text-sm line-clamp-3">
        <%= product.description %>
      </p>
    </div>
    <!-- Price -->
    <div class="flex items-baseline justify-between mb-4">
      <div>
        <span class="text-xl font-bold text-gray-900"><%= number_to_currency(product.price) %></span>
        <% if rand(1..3) == 1 %>
          <span class="text-sm text-gray-500 line-through ml-2"><%= number_to_currency(product.price + 20) %></span>
        <% end %>
      </div>
      <% if rand(1..3) == 1 %>
        <span class="text-xs font-semibold bg-gradient-to-r from-indigo-500 to-purple-500 text-white px-2 py-1 rounded-full">
          <%= rand(10..40) %>% OFF
        </span>
      <% end %>
    </div>
    <% if current_user&.admin? %>
      <span class="mt-auto bg-gradient-to-r from-indigo-600 to-purple-600 text-white py-2.5 px-4 rounded-lg transition duration-200 font-medium text-sm text-center opacity-50">Added</span>
    <% else %>
      <% if current_customer&.cart&.cart_items&.exists?(product_id: product.id) %>
        <span class="mt-auto bg-gradient-to-r from-indigo-600 to-purple-600 text-white py-2.5 px-4 rounded-lg transition duration-200 font-medium text-sm text-center opacity-50">Added</span>
      <% else %>
        <%= link_to "Add to Cart", cart_items_path(product_id: product.id), data: { controller: "cart", action: "click->cart#increment", turbo_method: :post }, class: "mt-auto bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white py-2.5 px-4 rounded-lg transition duration-200 font-medium text-sm text-center" %>
      <% end %>
    <% end %>
  </div>
</div>
