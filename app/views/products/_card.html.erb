<div class="bg-white rounded-2xl shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300 border border-gray-100">
  <%= link_to "#", class: "block group" do %>
    <%# Product Image %>
    <div class="h-48 bg-gray-100 flex items-center justify-center relative">
      <div class="bg-gray-300 border-2 border-dashed rounded-xl w-16 h-16"></div>
      <span class="absolute top-2 left-2 bg-red-500 text-white text-xs font-semibold px-2 py-0.5 rounded">Sale</span>
    </div>

    <%# Product Info %>
    <div class="p-4">
      <h3 class="font-semibold text-gray-900 mb-1 text-base group-hover:text-yellow-600 line-clamp-2">
        Premium Wireless Headphones with Noise Cancellation - Black
      </h3>
      <div class="flex items-center mb-2">
        <div class="flex text-yellow-400">
          <% 4.times do %><i class="fas fa-star"></i><% end %>
          <i class="fas fa-star-half-alt"></i>
        </div>
        <span class="text-gray-600 text-sm ml-2">(1,243 reviews)</span>
      </div>
      <div class="flex items-baseline space-x-2">
        <span class="text-lg font-bold text-gray-900">$89.99</span>
        <span class="text-sm text-gray-500 line-through">$129.99</span>
        <span class="text-xs text-red-600 font-semibold">30% off</span>
      </div>
      <div class="text-xs text-green-600 mt-1 font-medium">Prime FREE Delivery</div>
    </div>
  <% end %>

  <%# Add to Cart Button %>
  <div class="px-4 pb-4">
    <button class="w-full bg-yellow-400 hover:bg-yellow-500 text-gray-900 py-2 rounded-xl font-semibold shadow-sm hover:shadow transition duration-200">
      <i class="fas fa-shopping-cart mr-2"></i>Add to Cart
    </button>
  </div>
</div>
