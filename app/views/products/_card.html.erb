      
<div class="bg-white rounded-xl shadow-sm overflow-hidden border border-gray-100 transition-all duration-300 hover:shadow-lg">
  <!-- Product Image -->
  <div class="h-48 bg-gradient-to-br from-blue-50 to-purple-50 flex items-center justify-center p-4">
    <div class="w-32 h-32 rounded-full bg-gradient-to-br from-blue-100 to-purple-100 flex items-center justify-center shadow-inner">
      <div class="w-24 h-24 rounded-full bg-gradient-to-br from-blue-200 to-purple-200 flex items-center justify-center shadow-inner">
        <% if product.image.attached? %>
          <%= image_tag product.image.variant(resize_to_limit: [600, 400]), alt: product.name, class: "rounded shadow-md mb-4" %>
        <% else %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
          </svg>
        <% end %>  
      </div>
    </div>
  </div>
  <!-- Product Info -->
  <div class="p-5">
    <div class="mb-1">
      <span class="text-xs font-medium text-indigo-600 uppercase tracking-wide">Electronics</span>
      <h3 class="text-lg font-semibold text-gray-900 mt-1"><%= product.name %></h3>
    </div>
    <!-- Rating -->
    <div class="flex items-center mb-2">
      <div class="flex text-yellow-400">
        <% rand(3..5).times do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
        <% end %>
        <% (5 - rand(3..5)).times do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-300" viewBox="0 0 20 20" fill="currentColor">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
        <% end %>
      </div>
      <span class="text-xs text-gray-500 ml-1">(<%= "%.1f" % (rand(3.0..5.0)) %>)</span>
    </div>
    <p class="text-gray-600 text-sm mb-4">
      <%= product.description %>
    </p>
    <!-- Price -->
    <div class="flex items-baseline justify-between mb-4">
      <div>
        <span class="text-xl font-bold text-gray-900">$<%= number_to_currency(product.price) %></span>
        <% if rand(1..3) == 1 %>
          <span class="text-sm text-gray-500 line-through ml-2">$<%= rand(79..249) %>.99</span>
        <% end %>
      </div>
      <% if rand(1..3) == 1 %>
        <span class="text-xs font-semibold bg-gradient-to-r from-indigo-500 to-purple-500 text-white px-2 py-1 rounded-full">
          <%= rand(10..40) %>% OFF
        </span>
      <% end %>
    </div>
    <!-- Action Button -->
    <button class="w-full bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white py-2.5 px-4 rounded-lg transition duration-200 font-medium text-sm">
      Add to Cart
    </button>
  </div>
</div>
