<%# app/views/products/index.html.erb %>
<div class="max-w-7xl mx-auto">
  <%# Breadcrumbs %>
  <nav class="py-4 text-sm text-gray-600">
    <%= link_to "Home", root_path %> > 
    <%= link_to "Electronics", "#" %> > 
    <span class="font-medium">All Products</span>
  </nav>

  <div class="flex flex-col md:flex-row gap-6">
    <%# Sidebar Filters %>
    <aside class="w-full md:w-64 bg-white p-4 rounded shadow">
      <h2 class="font-bold text-lg mb-4">Filter Products</h2>
      
      <div class="mb-6">
        <h3 class="font-medium mb-2">Categories</h3>
        <ul class="space-y-1">
          <% ["Electronics", "Books", "Home & Kitchen", "Clothing", "Toys"].each do |category| %>
            <li>
              <%= link_to category, "#", class: "text-gray-700 hover:text-yellow-600" %>
            </li>
          <% end %>
        </ul>
      </div>

      <div class="mb-6">
        <h3 class="font-medium mb-2">Price Range</h3>
        <div class="space-y-2">
          <div class="flex items-center">
            <input type="checkbox" class="mr-2">
            <span>Under $25</span>
          </div>
          <div class="flex items-center">
            <input type="checkbox" class="mr-2">
            <span>$25 - $50</span>
          </div>
          <div class="flex items-center">
            <input type="checkbox" class="mr-2">
            <span>Over $50</span>
          </div>
        </div>
      </div>

      <div>
        <h3 class="font-medium mb-2">Customer Rating</h3>
        <div class="space-y-2">
          <% 4.downto(1) do |stars| %>
            <div class="flex items-center">
              <input type="checkbox" class="mr-2">
              <div class="flex text-yellow-400">
                <% stars.times do %><i class="fas fa-star"></i><% end %>
                <% (5-stars).times do %><i class="far fa-star"></i><% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </aside>

    <%# Main Content %>
    <div class="flex-1">
      <div class="bg-white p-4 rounded shadow mb-6 flex flex-wrap items-center justify-between">
        <h1 class="text-2xl font-bold">All Products</h1>
        <div class="flex items-center">
          <span class="mr-2">Sort by:</span>
          <select class="border rounded p-2">
            <option>Featured</option>
            <option>Price: Low to High</option>
            <option>Price: High to Low</option>
            <option>Avg. Customer Review</option>
          </select>
        </div>
      </div>

      <%# Products Grid %>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <% 12.times do %>
          <%= render 'products/card' %>
        <% end %>
      </div>

      <%# Pagination %>
      <div class="mt-8 flex justify-center">
        <nav class="flex space-x-2">
          <%= link_to "#", class: "px-4 py-2 border rounded hover:bg-gray-100" do %>
            <i class="fas fa-chevron-left"></i>
          <% end %>
          
          <% 1.upto(5) do |page| %>
            <%= link_to page, "#", class: "px-4 py-2 border rounded #{page == 1 ? 'bg-yellow-400 border-yellow-400' : 'hover:bg-gray-100'}" %>
          <% end %>
          
          <%= link_to "#", class: "px-4 py-2 border rounded hover:bg-gray-100" do %>
            <i class="fas fa-chevron-right"></i>
          <% end %>
        </nav>
      </div>
    </div>
  </div>
</div>
