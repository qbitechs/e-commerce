<header class="sticky top-0 z-50 w-full bg-white shadow-sm border-b border-gray-100">
  <div class="container mx-auto px-4">
    <!-- Top Bar -->
    <div class="flex items-center justify-between h-16">
      <!-- Logo and Mobile Menu -->
      <div class="flex items-center">
        <!-- Mobile Menu Button -->
        <button class="md:hidden mr-3 text-gray-600 focus:outline-none" aria-label="Open menu">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
        
        <!-- Logo -->
        <%= link_to root_path, class: "flex items-center group transition-transform duration-300 hover:scale-[1.02]" do %>
          <div class="bg-gradient-to-r from-indigo-600 to-purple-600 w-9 h-9 rounded-lg flex items-center justify-center shadow-md">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 2a4 4 0 00-4 4v1H5a1 1 0 00-.994.89l-1 9A1 1 0 004 18h12a1 1 0 00.994-1.11l-1-9A1 1 0 0015 7h-1V6a4 4 0 00-4-4zm2 5V6a2 2 0 10-4 0v1h4zm-6 3a1 1 0 112 0 1 1 0 01-2 0zm7-1a1 1 0 100 2 1 1 0 000-2z" clip-rule="evenodd" />
            </svg>
          </div>
          <span class="ml-2 text-xl font-bold text-gray-800 group-hover:text-indigo-600 transition-colors">ShopHub</span>
        <% end %>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex space-x-8 ml-10">
        <%= link_to "Home", root_path, 
            class: "text-gray-600 hover:text-indigo-600 transition-colors font-medium flex items-center py-1 border-b-2 border-transparent hover:border-indigo-300" %>
        
        <%= link_to "Shop", products_path, 
            class: "text-indigo-600 font-medium flex items-center py-1 border-b-2 border-indigo-500" %>
        
        <div class="relative group">
          <%= link_to "#", class: "text-gray-600 hover:text-indigo-600 transition-colors font-medium flex items-center py-1 border-b-2 border-transparent hover:border-indigo-300" do %>
            Categories
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 text-gray-400 group-hover:text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          <% end %>
          
          <!-- Mega Menu -->
          <div class="absolute left-0 mt-2 w-64 bg-white rounded-lg shadow-xl p-4 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 transform translate-y-1 group-hover:translate-y-0 z-50">
            <div class="grid grid-cols-2 gap-3">
              <% ["Electronics", "Home & Kitchen", "Books", "Health", "Toys", "Sports"].each do |category| %>
                <%= link_to category, "#", 
                    class: "text-gray-700 hover:text-indigo-600 hover:bg-indigo-50 rounded px-3 py-2 text-sm transition-colors" %>
              <% end %>
            </div>
          </div>
        </div>
        
        <%= link_to "Deals", "#", 
            class: "text-gray-600 hover:text-indigo-600 transition-colors font-medium flex items-center py-1 border-b-2 border-transparent hover:border-indigo-300" %>
      </nav>

      <!-- Search Bar -->
      <div class="hidden md:flex flex-1 max-w-md mx-8">
        <div class="relative w-full">
          <input 
            type="search" 
            placeholder="Search any product..." 
            class="w-full pl-10 pr-4 py-2.5 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-200 focus:border-indigo-300 transition-all shadow-sm"
            aria-label="Search products"
          >
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex items-center space-x-5">
        <!-- Account -->
        <div class="hidden md:block relative group">
          <button class="flex items-center text-gray-600 hover:text-indigo-600 transition-colors" aria-label="Account">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </button>
          <div class="absolute right-0 mt-2 w-56 origin-top-right bg-white rounded-lg shadow-lg py-2 ring-1 ring-black ring-opacity-5 invisible group-hover:visible transition-all duration-300 opacity-0 group-hover:opacity-100 z-50">
            <%= link_to "Sign in", "#", class: "block px-4 py-2.5 text-gray-700 hover:bg-indigo-50 transition-colors" %>
            <%= link_to "Create account", "#", class: "block px-4 py-2.5 text-gray-700 hover:bg-indigo-50 transition-colors" %>
            <div class="border-t my-1"></div>
            <%= link_to "Orders", "#", class: "block px-4 py-2.5 text-gray-700 hover:bg-indigo-50 transition-colors" %>
            <%= link_to "Account Settings", "#", class: "block px-4 py-2.5 text-gray-700 hover:bg-indigo-50 transition-colors" %>
          </div>
        </div>
        
        <!-- Cart -->
        <%= link_to "#", class: "flex items-center text-gray-600 hover:text-indigo-600 transition-colors relative group" do %>
          <div class="p-1.5 rounded-full group-hover:bg-indigo-50 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <span class="absolute top-0 right-0 bg-indigo-500 text-white rounded-full h-5 w-5 flex items-center justify-center text-xs font-medium transform -translate-y-1 translate-x-1 animate-pulse">3</span>
          <span class="hidden md:inline ml-1 font-medium">Cart</span>
        <% end %>
      </div>
    </div>
    
    <!-- Mobile Search & Categories -->
    <div class="border-t border-gray-100 md:hidden py-3">
      <div class="flex items-center mb-3">
        <input 
          type="search" 
          placeholder="Search products..." 
          class="flex-1 mr-2 px-4 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-1 focus:ring-indigo-200 shadow-sm"
          aria-label="Search products"
        >
        <button class="bg-indigo-600 text-white p-2.5 rounded-lg hover:bg-indigo-700 transition-colors" aria-label="Search">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </button>
      </div>
      
      <div class="flex overflow-x-auto space-x-3 pb-1 hide-scrollbar">
        <%= link_to "All", "#", 
            class: "whitespace-nowrap px-4 py-2 bg-indigo-100 text-indigo-700 rounded-lg text-sm font-medium flex-shrink-0" %>
        <%= link_to "Popular", "#", 
            class: "whitespace-nowrap px-4 py-2 bg-gray-100 text-gray-700 rounded-lg text-sm font-medium hover:bg-gray-200 flex-shrink-0" %>
        <%= link_to "Deals", "#", 
            class: "whitespace-nowrap px-4 py-2 bg-gray-100 text-gray-700 rounded-lg text-sm font-medium hover:bg-gray-200 flex-shrink-0" %>
        <%= link_to "New", "#", 
            class: "whitespace-nowrap px-4 py-2 bg-gray-100 text-gray-700 rounded-lg text-sm font-medium hover:bg-gray-200 flex-shrink-0" %>
      </div>
    </div>
  </div>
</header>
