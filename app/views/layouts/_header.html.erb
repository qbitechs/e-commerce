<header class="sticky top-0 z-50 w-full border-b bg-white shadow-sm">
  <!-- Top navigation bar -->
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <!-- Logo and mobile menu -->
      <div class="flex items-center space-x-4">
        <%= link_to root_path, class: "flex items-center group" do %>
          <div class="bg-gradient-to-r from-blue-600 to-indigo-600 w-9 h-9 rounded-lg flex items-center justify-center transition-transform group-hover:rotate-6">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 2a4 4 0 00-4 4v1H5a1 1 0 00-.994.89l-1 9A1 1 0 004 18h12a1 1 0 00.994-1.11l-1-9A1 1 0 0015 7h-1V6a4 4 0 00-4-4zm2 5V6a2 2 0 10-4 0v1h4zm-6 3a1 1 0 112 0 1 1 0 01-2 0zm7-1a1 1 0 100 2 1 1 0 000-2z" clip-rule="evenodd" />
            </svg>
          </div>
          <span class="ml-2 text-xl font-bold text-gray-800 group-hover:text-blue-600 transition-colors">MarketPro</span>
        <% end %>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex space-x-8 ml-8">
        <%= link_to "Home", root_path, class: "text-gray-600 hover:text-blue-600 transition-colors font-medium" %>
        <%= link_to "Shop", products_path, class: "text-blue-600 border-b-2 border-blue-600 pb-1 font-medium" %>
        <%= link_to "Categories", "#", class: "text-gray-600 hover:text-blue-600 transition-colors font-medium" %>
        <%= link_to "Deals", "#", class: "text-gray-600 hover:text-blue-600 transition-colors font-medium" %>
      </nav>

      <!-- Search bar -->
      <div class="hidden md:flex flex-1 max-w-md mx-8">
        <div class="relative w-full">
          <input 
            type="search" 
            placeholder="Search any product..." 
            class="w-full pl-10 pr-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-300 focus:border-transparent transition-all shadow-sm"
          >
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
        </div>
      </div>

      <!-- Right side navigation -->
      <div class="flex items-center space-x-5">
        <!-- Account dropdown -->
        <div class="hidden md:block relative group">
          <button class="flex items-center text-gray-600 hover:text-blue-600 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </button>
          <div class="absolute right-0 mt-2 w-56 origin-top-right bg-white rounded-lg shadow-lg py-2 ring-1 ring-black ring-opacity-5 invisible group-hover:visible transition-opacity opacity-0 group-hover:opacity-100 z-50">
            <%= link_to "Sign in", new_user_session_path, class: "block px-4 py-2 text-gray-700 hover:bg-gray-50" %>
            <%= link_to "Create account", new_user_registration_path, class: "block px-4 py-2 text-gray-700 hover:bg-gray-50" %>
            <div class="border-t my-1"></div>
            <%= link_to "Orders", orders_path, class: "block px-4 py-2 text-gray-700 hover:bg-gray-50" %>
            <%= link_to "Account Settings", "#", class: "block px-4 py-2 text-gray-700 hover:bg-gray-50" %>
          </div>
        </div>
        
        <!-- Cart -->
        <%= link_to "#", class: "flex items-center text-gray-600 hover:text-blue-600 transition-colors relative group" do %>
          <div class="p-1 rounded-full group-hover:bg-blue-50 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <span class="absolute top-0 right-0 bg-blue-500 text-white rounded-full h-5 w-5 flex items-center justify-center text-xs font-medium transform -translate-y-1 translate-x-1">3</span>
          <span class="hidden md:inline ml-1 font-medium">Cart</span>
        <% end %>
        
        <!-- Mobile menu button -->
        <button class="md:hidden text-gray-600 p-2 rounded-lg hover:bg-gray-100">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile search and categories -->
  <div class="border-t border-gray-100 md:hidden">
    <div class="container mx-auto px-4 py-3">
      <div class="flex items-center mb-3">
        <input 
          type="search" 
          placeholder="Search products..." 
          class="flex-1 mr-2 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-1 focus:ring-blue-300 shadow-sm"
        >
        <button class="bg-blue-600 text-white p-2.5 rounded-lg">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </button>
      </div>
      
      <div class="flex overflow-x-auto space-x-3 pb-1 hide-scrollbar">
        <%= link_to "All", "#", class: "whitespace-nowrap px-4 py-2 bg-blue-100 text-blue-700 rounded-lg text-sm font-medium" %>
        <%= link_to "Popular", "#", class: "whitespace-nowrap px-4 py-2 bg-gray-100 text-gray-700 rounded-lg text-sm font-medium hover:bg-gray-200" %>
        <%= link_to "Deals", "#", class: "whitespace-nowrap px-4 py-2 bg-gray-100 text-gray-700 rounded-lg text-sm font-medium hover:bg-gray-200" %>
        <%= link_to "New", "#", class: "whitespace-nowrap px-4 py-2 bg-gray-100 text-gray-700 rounded-lg text-sm font-medium hover:bg-gray-200" %>
      </div>
    </div>
  </div>
</header>
