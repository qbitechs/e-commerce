<header class="bg-white shadow-sm sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <!-- Search & Actions -->
      <div class="flex items-center space-x-4">
        <!-- Account Dropdown -->
        <div class="relative group">
          <button class="p-2 text-gray-600 hover:text-primary transition duration-300" aria-label="Account">
            <i class="fas fa-user text-lg"></i>
          </button>
          <div class="absolute right-0 mt-2 w-56 origin-top-right bg-white rounded-lg shadow-lg py-2 ring-1 ring-black ring-opacity-5 invisible group-hover:visible transition-all duration-300 opacity-0 group-hover:opacity-100 z-50">
            <%if admin_user_signed_in?  %>
              <%= link_to "Log Out", admin_session_path, data: { turbo_method: :delete, turbo_confirm:  "Are you sure you want to log out?" }, class: "block px-4 py-2.5 text-gray-700 hover:bg-gray-50 transition-colors" %>
            <% else %>
              <%= link_to "Sign in", new_admin_session_path, class: "block px-4 py-2.5 text-gray-700 hover:bg-gray-50 transition-colors" %>
            <% end %>
          </div>
        </div>
        <!-- Mobile Menu Button -->
        <button class="lg:hidden p-2 text-gray-600 focus:outline-none" aria-label="Open menu">
          <i class="fas fa-bars text-lg"></i>
        </button>
      </div>
    </div>
    <!-- Mobile Search & Navigation (shown when menu is opened) -->
    <div class="lg:hidden border-t border-gray-100 pt-4 mt-4">
      <!-- Mobile Account Actions -->
      <div class="border-t border-gray-100 mt-4 pt-4">
        <% if admin_user_signed_in?  %>
          <%= link_to "Log Out", admin_session_path, data: { turbo_method: :delete, turbo_confirm:  "Are you sure you want to log out?" }, class: "block py-2 text-gray-700 hover:text-primary" %>
        <% else %>
          <%= link_to "Sign in", new_admin_session_path, class: "block py-2 text-gray-700 hover:text-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</header>
