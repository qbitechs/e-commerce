<header class="bg-white shadow-sm sticky top-0 z-50">
  <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8 py-3 lg:py-4">
    <div class="flex items-center justify-between" data-controller="mobile-navigation">
      <!-- Mobile menu button and title -->
      <div class="flex items-center lg:hidden">
        <button class="p-2 text-gray-600 hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 rounded-md" id="mobile-menu-btn" data-action="click->mobile-navigation#toggleSidebar">
          <i class="fas fa-bars text-lg" id="icon"></i>
        </button>
        <h1 class="ml-3 text-lg font-semibold text-gray-900">Admin</h1>
      </div>

      <!-- Desktop spacer -->
      <div class="lg:block flex-1"></div>
      
      <!-- Right side actions -->
      <div class="flex items-center space-x-2 sm:space-x-4">
        <div class="relative">
          <button id="account-menu-btn" class="flex items-center p-2 text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-full transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" data-action="click->mobile-navigation#toggleDropdown" aria-label="Account menu">
            <i class="fas fa-user text-lg"></i>
            <i class="fas fa-chevron-down text-xs ml-1"></i>
          </button>
          
          <!-- Dropdown menu -->
          <div id="account-dropdown" class="absolute right-0 mt-2 w-48 sm:w-56 origin-top-right bg-white rounded-lg shadow-lg py-2 ring-1 ring-black ring-opacity-5 hidden z-50" >
            <div class="px-4 py-2 border-b border-gray-100">
              <p class="text-sm font-medium text-gray-900">Admin User</p>
              <p class="text-xs text-gray-500 truncate">admin@example.com</p>
            </div>
            
            <% if user_signed_in? %>
              <% if impersonating_user? %>
                <div class="px-4 py-2 bg-yellow-50 border-b border-yellow-200">
                  <p class="text-xs text-yellow-700">
                    <i class="fas fa-user-secret mr-1"></i>
                    Impersonating User
                  </p>
                </div>
                <%= button_to "Stop Impersonating", switch_back_admin_admin_users_path, method: :post, 
                    class: "w-full text-left block px-4 py-2.5 text-sm text-gray-700 hover:bg-gray-50 transition-colors focus:bg-gray-50 focus:outline-none" %>
              <% end %>
              
              <%= link_to "Profile Settings", edit_admin_settings_path, 
                  class: "block px-4 py-2.5 text-sm text-gray-700 hover:bg-gray-50 transition-colors focus:bg-gray-50 focus:outline-none" %>
              
              <div class="border-t border-gray-100 mt-1 pt-1">
                <%= link_to "Log Out", admin_session_path, 
                    data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to log out?" }, 
                    class: "block px-4 py-2.5 text-sm text-red-600 hover:bg-red-50 transition-colors focus:bg-red-50 focus:outline-none" %>
              </div>
            <% else %>
              <%= link_to "Sign in", new_admin_session_path, 
                  class: "block px-4 py-2.5 text-sm text-gray-700 hover:bg-gray-50 transition-colors focus:bg-gray-50 focus:outline-none" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
