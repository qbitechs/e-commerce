<section class="py-20 bg-primary text-white">
  <div class="max-w-7xl mx-auto px-4 text-center">
    <div class="max-w-2xl mx-auto">
      <h2 class="text-4xl font-display font-bold mb-4">Stay in the Loop</h2>
      <p class="text-xl text-gray-300 mb-8">
        Subscribe to our newsletter and be the first to know about new arrivals, exclusive deals, and special events.
      </p>
      <%= form_with url: "#", method: :post, local: false, class: "flex flex-col sm:flex-row gap-4 max-w-md mx-auto" do |form| %>
        <%= form.email_field :email, placeholder: "Enter your email address", class: "flex-1 px-6 py-4 rounded-full text-gray-900 bg-white border-2 border-transparent focus:outline-none focus:ring-2 focus:ring-accent focus:border-accent placeholder-gray-500 transition-all duration-300", required: true %>
        <%= form.submit "Subscribe Now", class: "bg-accent text-black px-8 py-4 rounded-full font-semibold hover:bg-yellow-500 transition duration-300 whitespace-nowrap cursor-pointer" %>
      <% end %>
      <p class="text-sm text-gray-400 mt-4">
        We respect your privacy. Unsubscribe at any time.
      </p>
    </div>
  </div>
</section>
