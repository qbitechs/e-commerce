    <!-- Header -->
    <header class="bg-white shadow-sm sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 py-4">
            <div class="flex items-center justify-between">
                <!-- Logo -->
                <div class="flex items-center">
                    <div class="w-10 h-10 bg-accent rounded-full flex items-center justify-center mr-3">
                        <i class="fas fa-gem text-white"></i>
                    </div>
                    <h1 class="text-2xl font-display font-bold text-primary">Luxora</h1>
                </div>

                <!-- Desktop Navigation -->
                <nav class="hidden lg:flex items-center space-x-8">
                    <a href="#" class="text-gray-700 hover:text-primary font-medium transition duration-300">Home</a>
                    <div class="relative group">
                        <a href="#" class="text-gray-700 hover:text-primary font-medium transition duration-300 flex items-center">
                            Shop <i class="fas fa-chevron-down ml-1 text-xs"></i>
                        </a>
                        <div class="absolute top-full left-0 bg-white shadow-lg rounded-lg py-2 w-48 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition duration-300">
                            <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-gray-50">All Products</a>
                            <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-gray-50">New Arrivals</a>
                            <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-gray-50">Best Sellers</a>
                            <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-gray-50">Sale Items</a>
                        </div>
                    </div>
                    <a href="#" class="text-gray-700 hover:text-primary font-medium transition duration-300">Collections</a>
                    <a href="#" class="text-gray-700 hover:text-primary font-medium transition duration-300">About</a>
                    <a href="#" class="text-gray-700 hover:text-primary font-medium transition duration-300">Contact</a>
                </nav>

                <!-- Search & Actions -->
                <div class="flex items-center space-x-4">
                    <!-- Search -->
                    <div class="hidden md:block relative">
                        <input type="text" placeholder="Search..." 
                               class="w-64 pl-10 pr-4 py-2 border border-gray-200 rounded-full focus:outline-none focus:ring-2 focus:ring-accent/20 focus:border-accent">
                        <i class="fas fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                    </div>

                    <!-- User Actions -->
                    <button class="p-2 text-gray-600 hover:text-primary transition duration-300">
                        <i class="fas fa-user text-lg"></i>
                    </button>
                    <button class="p-2 text-gray-600 hover:text-primary transition duration-300 relative">
                        <i class="fas fa-heart text-lg"></i>
                        <span class="absolute -top-1 -right-1 bg-accent text-white text-xs rounded-full w-5 h-5 flex items-center justify-center">2</span>
                    </button>
                    <button class="p-2 text-gray-600 hover:text-primary transition duration-300 relative">
                        <i class="fas fa-shopping-bag text-lg"></i>
                        <span class="absolute -top-1 -right-1 bg-accent text-white text-xs rounded-full w-5 h-5 flex items-center justify-center">3</span>
                    </button>

                    <!-- Mobile Menu Button -->
                    <button class="lg:hidden p-2 text-gray-600">
                        <i class="fas fa-bars text-lg"></i>
                    </button>
                </div>
            </div>
        </div>
    </header>

    <%= render "static/hero_section" %>
    <%= render "static/feature_bar" %>
    <%= render "static/categories" %>
    <%= render "static/feature_products" %>
    <%= render "static/promotional_banner" %>
    <%= render "static/testimonials" %>
    <%= render "static/newsletter" %>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white py-16">
        <div class="max-w-7xl mx-auto px-4">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
                <!-- Company Info -->
                <div class="lg:col-span-2">
                    <div class="flex items-center mb-6">
                        <div class="w-10 h-10 bg-accent rounded-full flex items-center justify-center mr-3">
                            <i class="fas fa-gem text-black"></i>
                        </div>
                        <h3 class="text-2xl font-display font-bold">Luxora</h3>
                    </div>
                    <p class="text-gray-400 mb-6 max-w-md">
                        Luxora is your destination for premium lifestyle products. We curate the finest selection 
                        of items to elevate your everyday experiences.
                    </p>
                    <div class="flex space-x-4">
                        <a href="#" class="w-10 h-10 bg-gray-800 rounded-full flex items-center justify-center hover:bg-accent hover:text-black transition duration-300">
                            <i class="fab fa-facebook"></i>
                        </a>
                        <a href="#" class="w-10 h-10 bg-gray-800 rounded-full flex items-center justify-center hover:bg-accent hover:text-black transition duration-300">
                            <i class="fab fa-instagram"></i>
                        </a>
                        <a href="#" class="w-10 h-10 bg-gray-800 rounded-full flex items-center justify-center hover:bg-accent hover:text-black transition duration-300">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="w-10 h-10 bg-gray-800 rounded-full flex items-center justify-center hover:bg-accent hover:text-black transition duration-300">
                            <i class="fab fa-youtube"></i>
                        </a>
                    </div>
                </div>

                <!-- Quick Links -->
                <div>
                    <h4 class="text-lg font-semibold mb-6">Quick Links</h4>
                    <ul class="space-y-3">
                        <li><a href="#" class="text-gray-400 hover:text-white transition duration-300">About Us</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition duration-300">Our Story</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition duration-300">Careers</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition duration-300">Press</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition duration-300">Blog</a></li>
                    </ul>
                </div>

                <!-- Customer Care -->
                <div>
                    <h4 class="text-lg font-semibold mb-6">Customer Care</h4>
                    <ul class="space-y-3">
                        <li><a href="#" class="text-gray-400 hover:text-white transition duration-300">Contact Us</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition duration-300">FAQ</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition duration-300">Size Guide</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition duration-300">Shipping & Returns</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition duration-300">Track Your Order</a></li>
                    </ul>
                </div>
            </div>

            <div class="border-t border-gray-800 pt-8 flex flex-col md:flex-row justify-between items-center">
                <p class="text-gray-400 mb-4 md:mb-0">
                    &copy; 2024 Luxora. All rights reserved.
                </p>
                <div class="flex space-x-6">
                    <a href="#" class="text-gray-400 hover:text-white transition duration-300">Privacy Policy</a>
                    <a href="#" class="text-gray-400 hover:text-white transition duration-300">Terms of Service</a>
                    <a href="#" class="text-gray-400 hover:text-white transition duration-300">Cookie Settings</a>
                </div>
            </div>
        </div>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Smooth scrolling
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth'
                        });
                    }
                });
            });

            // Simple product hover effects
            const productCards = document.querySelectorAll('.group');
            productCards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-4px)';
                });
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });
        });
    </script>
</body>
