<section class="relative bg-gradient-to-br from-gray-900 via-gray-800 to-black text-white overflow-hidden">
  <div class="absolute inset-0 bg-black/20"></div>
  <div class="relative max-w-7xl mx-auto px-4 py-24 lg:py-32">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div class="space-y-8">
        <div class="space-y-4">
          <p class="text-accent font-medium tracking-wide uppercase">New Collection 2025</p>
          <h1 class="text-5xl lg:text-7xl font-display font-bold leading-tight">
            <% if Current.store&.title %>
              <%= Current.store&.title %>
            <% else %>
              Elevate Your
              <span class="text-accent">Style</span>
            <% end %>
          </h1>
          <p class="text-xl text-gray-300 leading-relaxed">
            <% if Current.store&.description %>
              <%= Current.store&.description %>
            <% else %>
              Discover our curated collection of premium products designed for the modern lifestyle. 
              Quality craftsmanship meets contemporary design.
            <% end %>
          </p>
        </div>
        <div class="flex flex-col sm:flex-row gap-4">
          <%= link_to "Explore Collection", products_path, class: "bg-accent text-black px-8 py-4 rounded-full font-semibold hover:bg-yellow-500 transition duration-300 transform hover:scale-105 inline-block text-center" %>
        </div>
      </div>
      <div class="relative">
        <div class="aspect-square bg-gradient-to-br from-accent/20 to-transparent rounded-full p-8">
          <% if Current.store&.hero_image&.attached? %>
            <img src="<%= url_for(Current.store.hero_image) %>" alt="Hero Product" class="w-full h-full object-cover rounded-full shadow-2xl">
          <% else%>
            <img src="https://images.unsplash.com/photo-1441986300917-64674bd600d8?w=600&h=600&fit=crop" alt="Hero Product" class="w-full h-full object-cover rounded-full shadow-2xl">
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
