<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-display font-bold text-gray-900 mb-4">Shop by Category</h2>
      <p class="text-xl text-gray-600">Discover our carefully curated collections</p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% categories.each_with_index do |category, index| %>
        <% 
          gradients = ["from-pink-100 to-rose-200", "from-blue-100 to-indigo-200", "from-green-100 to-emerald-200"]
          colors = ["pink", "blue", "green"]
          color = colors[index % 3]
          gradient = gradients[index % 3]
        %>
        <div class="group relative overflow-hidden rounded-2xl bg-gradient-to-br <%= gradient %> p-8 hover:shadow-xl transition duration-500">
          <div class="relative z-10">
            <div class="w-16 h-16 bg-white rounded-full flex items-center justify-center mb-6 group-hover:scale-110 transition duration-300">
              <i class="fas fa-tag text-<%= color %>-600 text-2xl"></i>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-2"><%= category.name.titleize %></h3>
            <p class="text-gray-700 mb-6">Discover amazing products in this category</p>
            <%= link_to products_path(category: category), class: "bg-white text-#{color}-600 px-6 py-2 rounded-full font-semibold hover:bg-#{color}-600 hover:text-white transition duration-300" do %>
              Shop Now <i class="fas fa-arrow-right ml-2"></i>
            <% end %>
          </div>
          <div class="absolute top-4 right-4 text-6xl text-white/20 group-hover:text-white/30 transition duration-300">
            <i class="fas fa-tag"></i>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
